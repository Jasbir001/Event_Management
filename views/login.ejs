<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventXpress</title>
    <%- include ('CDN/bootstrap') %>
    <%- include ('Header/slider_css_js') %>
</head>
<body>
    <%- include ('Header/User_header') %>


        <div class="container mt-5 login_div_margin_bottom">
        <div class="row mt-3">
            <div class="col-sm-4 offset-sm-4 mt-3">
              
                <img src="../public/image/login.jpg" class="img-fluid mx-auto d-block" alt="Logo" style="width:180px;height:180px;">
             
                <div class="card">
                    <div class="card_header text-center">
                        <h3>Login</h3>
                    </div>
                   <div class="card-body">
                    <form action="/plogin" method="post">
                        <div class="form-group mb-3">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email"  required>
                
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password"  required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>
                    <a href="/forget_password" class="d-block mt-3 text-center text-primary">Forgot Password</a>
                    <a href="/useraccount" class="d-block mt-3 text-center text-primary">Not have an Account?New User</a>

                   </div> 
                </div>
            </div>
        </div>
    </div>
    

    
    <%- include ('Chat/chat') %>
    <%- include ('Footer/user') %>
    <%- include ('CDN/javascript') %>


</body>
</html>